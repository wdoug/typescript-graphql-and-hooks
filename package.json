{
  "scripts": {
    "prettier:all": "prettier **/*.{js,jsx,ts,tsx,json,css,scss,graphql,md} --write"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,graphql,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/graphql": "^14.2.0"
  }
}
